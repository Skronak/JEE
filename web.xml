<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>nantes.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/nantes/greet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  
  <servlet>
	<servlet-name>TestServlet</servlet-name>
	<servlet-class>nantes.server.TestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>TestServlet</servlet-name>
	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<servlet-name>FormServlet</servlet-name>
	<servlet-class>nantes.server.FormServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>FormServlet</servlet-name>
	<url-pattern>/alerte</url-pattern>
  </servlet-mapping>
  
    <servlet>
	<servlet-name>MesAlertesServlet</servlet-name>
	<servlet-class>nantes.server.MesAlertesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>MesAlertesServlet</servlet-name>
	<url-pattern>/MesAlertes</url-pattern>
  </servlet-mapping>
  

  <servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>nantes.server.login</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
    <servlet>
	<servlet-name>page</servlet-name>
	<servlet-class>nantes.server.page</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>page</servlet-name>
	<url-pattern>/page</url-pattern>
  </servlet-mapping>
  
  
  
  <welcome-file-list>
    <welcome-file>Nantes.html</welcome-file>
    </welcome-file-list>
  </web-app>
