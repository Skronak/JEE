<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
  <!-- Servlets -->
  
  	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
	
  <servlet>
    <servlet-name>log</servlet-name>
    <servlet-class>com.rue.servlet.Log</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>view</servlet-name>
    <servlet-class>com.rue.servlet.ViewMap</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>creerAlerte</servlet-name>
    <servlet-class>com.rue.servlet.Form</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>mesAlertes</servlet-name>
    <servlet-class>com.rue.servlet.MesAlertes</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>log</servlet-name>
    <url-pattern>/log</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>view</servlet-name>
    <url-pattern>/view</url-pattern>
  </servlet-mapping>
 <servlet-mapping>
    <servlet-name>creerAlerte</servlet-name>
    <url-pattern>/creerAlerte</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>mesAlertes</servlet-name>
    <url-pattern>/mesAlertes</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Jaidemarue.html</welcome-file>
  </welcome-file-list>

</web-app>
